{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "config",
        "watchAssets": true
      },
      { "include": "i18n/*", "watchAssets": true }
    ]
  },
  "generateOptions": {
    "spec": false
  }
}
