{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "outDir": "./dist",
        "sourceMap": false,
        "moduleResolution": "node",
        "types": [],
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["packages/Shared/*"],
            "@modules/*": ["packages/Trip/modules/*"]
        },
        "incremental": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    }
}
